    "zod": "4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "25.2.3",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "^9.39.2",
