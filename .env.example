# Firebase web app config
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin service account
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"

# Single-owner allowlist
# Prefer OWNER_UID when possible; OWNER_GOOGLE_EMAIL is supported as fallback.
OWNER_UID=
OWNER_GOOGLE_EMAIL=

# Optional: enable service worker registration in local dev (`npm run dev`)
# Default behavior only registers PWA in production.
NEXT_PUBLIC_ENABLE_PWA_DEV=false

# Vercel Cron auth
CRON_SECRET=

# Web Push (VAPID)
WEB_PUSH_SUBJECT="mailto:you@example.com"
WEB_PUSH_VAPID_PUBLIC_KEY=
WEB_PUSH_VAPID_PRIVATE_KEY=

# Comma-separated reminder offsets for card due dates (days before due date)
CARD_REMINDER_OFFSETS="7,3,1"

# Default local delivery hours for cron alerts in UK time (0-23, comma-separated)
CARD_REMINDER_DELIVERY_HOURS="8"
